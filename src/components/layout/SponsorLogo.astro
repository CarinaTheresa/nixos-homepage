---
const {
  class: extraClasses,
  href: externalLink,
  src: imageSource,
  alt: altText,
} = Astro.props;
---

<div
  class=`flex flex-col justify-center items-center relative h-20 bg-white rounded-lg ${extraClasses}`
>
  <a href={externalLink}>
    <img class="w-full max-w-24 max-h-16 block" src={imageSource} alt={altText} />
  </a>
</div>
